<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>
    reservr - dashboard
  </title>

  <link rel="stylesheet" href="/bower_components/foundation/css/normalize.css">
  <link rel="stylesheet" href="/bower_components/foundation/css/foundation.css">
</head>
<body>

  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1>
          <a href="/dashboard">reservr dashboard</a>
        </h1>
      </li>
    </ul>
  </nav>

  <div class="row">
    <div class="large-10 columns">
      
      <h3>List of all the events</h3>

    </div>

    <div class="large-2 columns">
      <a href="/dashboard/event" class="button small">New Event</a>
    </div>
  </div>
  
  <div class="row">
    <div class="large-12 columns">

      <% if (events.length) { %>
      
      <ul>
       
        <% for(var i = 0; i < events.length; i++) {%>
                      
          <li> 

            <a href="/dashboard/event/<%= events[i]._id %>"> 
              <%= events[i].name %> 
            </a>

            <div>
              <%- events[i].description %>
            </div>

            <div>
              <img src="/data/media/<%= events[i].image || 'default-placeholder.png'%>" alt="">
            </div>
          </li>

        <% } %>  

      </ul>

      <% } else { %>
        
        <p>No events yet. Go ahead and <a href="/dashboard/event">add one.</a></p>
      <% } %>
    </div>
  </div>


  <script src="/bower_components/jquery/dist/jquery.min.js"></script>
  <script src="/bower_components/foundation/js/foundation.min.js"></script>

</body>
</html>
